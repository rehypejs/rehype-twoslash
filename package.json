{
  "name": "rehype-twoslash",
  "version": "1.1.1",
  "description": "rehype plugin to process TypeScript and JavaScript code with `twoslash` and highlight it with `starry-night`",
  "license": "MIT",
  "keywords": [
    "hast",
    "highlight",
    "html",
    "plugin",
    "rehype",
    "rehype-plugin",
    "syntax",
    "twoslash",
    "typescript",
    "unified"
  ],
  "repository": "rehypejs/rehype-twoslash",
  "bugs": "https://github.com/rehypejs/rehype-twoslash/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/hast": "^3.0.0",
    "@types/mdast": "^4.0.0",
    "@wooorm/starry-night": "^3.0.0",
    "devlop": "^1.0.0",
    "hast-util-to-string": "^3.0.0",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-gfm": "^3.0.0",
    "mdast-util-to-hast": "^13.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "micromark-util-character": "^2.0.0",
    "twoslash": "^0.2.0",
    "unist-util-remove-position": "^5.0.0",
    "unist-util-visit-parents": "^6.0.0",
    "vfile": "^6.0.0"
  },
  "#": "`@typescript/vfs` currently barfs when building because `lz-string` is missing, so itâ€™s installed here.",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "c8": "^10.0.0",
    "lz-string": "^1.0.0",
    "prettier": "^3.0.0",
    "rehype-document": "^7.0.0",
    "rehype-parse": "^9.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-api": "^1.0.0",
    "remark-cli": "^12.0.0",
    "remark-parse": "^11.0.0",
    "remark-preset-wooorm": "^10.0.0",
    "remark-rehype": "^11.0.0",
    "to-vfile": "^8.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "vfile-reporter": "^8.0.0",
    "xo": "^0.59.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . --frail --output --quiet && prettier . --log-level warn --write && xo --fix",
    "prepack": "npm run build && npm run format",
    "test": "npm run build && npm run format && npm run test-coverage",
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --100 --check-coverage --reporter lcov npm run test-api"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      "remark-api",
      [
        "remark-lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "overrides": [
      {
        "files": [
          "**/*.d.ts"
        ],
        "rules": {
          "@typescript-eslint/array-type": [
            "error",
            {
              "default": "generic"
            }
          ],
          "@typescript-eslint/ban-types": [
            "error",
            {
              "extendDefaults": true
            }
          ],
          "@typescript-eslint/consistent-type-definitions": [
            "error",
            "interface"
          ]
        }
      },
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "no-await-in-loop": "off"
        }
      }
    ],
    "prettier": true,
    "rules": {
      "complexity": "off",
      "max-depth": "off",
      "unicorn/prefer-code-point": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
